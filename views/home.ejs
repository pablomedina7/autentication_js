<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <div class="form-container">
      <!-- Login Form -->
      <h2>Login</h2>
      <form action="/auth/login" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <!-- Email Field -->
        <label for="login-email">Email</label>
        <input type="email" id="login-email" name="email" placeholder="Enter your email" required>
        
        <!-- Password Field -->
        <label for="login-password">Password</label>
        <input type="password" id="login-password" name="password" placeholder="Enter your password" required>
        
        <!-- Remember Session -->
        <label>
          <input type="checkbox" name="remember"> Recordar sesi√≥n
        </label>
        
        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">Login</button>

        <!-- Error Message -->
        <% if (loginError) { %>
          <p class="error"><%= loginError %></p>
        <% } %>
      </form>
    </div>

    <div class="form-container">
      <!-- Register Form -->
      <h2>Register</h2>
      <form action="/auth/register" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <!-- Email Field -->
        <label for="register-email">Email</label>
        <input type="email" id="register-email" name="email" placeholder="Enter your email" required>
        
        <!-- Password Field -->
        <label for="register-password">Password</label>
        <input type="password" id="register-password" name="password" placeholder="Enter your password" required>
        
        <!-- Confirm Password Field -->
        <label for="register-confirm-password">Confirm Password</label>
        <input type="password" id="register-confirm-password" name="confirmPassword" placeholder="Confirm your password" required>
        
        <!-- Role Selection -->
        <label for="register-role">Role</label>
        <select id="register-role" name="role" required>
          <option value="user">User</option>
          <option value="admin">Admin</option>
        </select>
        
        <!-- Submit Button -->
        <button type="submit" class="btn btn-success">Register</button>

        <!-- Error Message -->
        <% if (registerError) { %>
          <p class="error"><%= registerError %></p>
        <% } %>
      </form>
    </div>
  </div>
</body>
</html>
